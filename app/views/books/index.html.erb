<% if @book.errors.any? %>
  <div class="alert alert-warning">
  	<p>error message</p>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>


<div class="container">
<div class="row">
<div class="col-xs-3">
<h2>User info</h2>
<div class="user-edit-image">
	<%= attachment_image_tag current_user, :profile_image, :fill, 60, 60, fallback: "No_image.jpg" %>
</div>
<table class="table">
	<tbody>
		<tr>
			<th>name</th><th><%= current_user.name %></th>
		</tr>
		<tr>
			<th>introduction</th><th><%= current_user.introduction %></th>
		</tr>
	</tbody>
</table>

<%= link_to "", edit_user_path(current_user), class: "glyphicon glyphicon-wrench btn btn-default w-100" %>


<h2>New book</h2>
<%= form_for(@book) do |book| %>
<p><b>Title</b></p>
<%= book.text_field :title %>
<p><b>Opinion</b></p>
<%= book.text_area :body %>
<button type="submit" class="btn btn-primary">Create Book </button>
<% end %>
</div>
<div class="col-lg-9">
</div>


<div class="col-xs-9">
<h2>Books</h2>
<table class="table table-hover">
	<thead>
		<tr>
			<th></th><th>Title</th><th>Opinion</th>
		</tr>
	</thead>
	<tbody>
		<% @books.each do |book| %>
		<tr>
			<td><div class="user-edit-image"><%= attachment_image_tag book.user, :profile_image, :fill, 50, 50, fallback: "No_image.jpg",size:'50x50' %></div></td>
			<td><%= link_to book.title,  "/books/#{book.id}" %></td>
			<td><%= book.body %></td>
			<td>
				<div id="favorite_<%= book.id %>" >
					<%= render 'favorites/favorite', book: book %>
				</div>
			</td>
		</tr>
		<% end %>
</tbody>

</table>
</div>
</div>
</div>
</div>

