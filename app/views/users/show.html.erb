<div class="notice text-success">
	<%= notice %>
</div>

<div class="container">
<div class="row">
<div class="col-xs-3">
	<%= render 'layouts/side', book: @book, user: @user %>
	<% if current_user != @user %>
		<%= link_to 'チャットする', chat_path(@user.id) %>
	<% end %>
</div>

<div class="col-xs-9">
<h2>Books</h2>
<table class="table table-hover">
	<thead>
		<tr>
			<th>Title</th><th>Opinion</th>
		</tr>
	</thead>
	<tbody>
		<% @books.each do |book| %>
		<tr>
			<td><%= book.title %></td>
			<td><%= book.body %></td>
		</tr>
		<% end %>
	</tbody>

</table>
</div>
</div>
</div>

