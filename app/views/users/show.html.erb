<div class="notice text-success">
	<%= notice %>
</div>

<div class="container">
<div class="row">
<div class="col-xs-3">

<h2>User info</h2>
<div class="user-edit-image">
	<%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "No_image.jpg" %>
</div>

<table class="table">
	<tbody>
		<tr>
			<th>name</th><th><%= @user.name %></th>
		</tr>
		<tr>
			<th>introduction</th><th><%= @user.introduction %></th>
		</tr>
	</tbody>
</table>
<% if @user == current_user %>
<%= link_to "", edit_user_path(current_user), class: "glyphicon glyphicon-wrench btn btn-default w-100" %>
<% else %>
<%= link_to "", user_path(current_user), class: "glyphicon glyphicon-wrench btn btn-default" %>
<% end %>


<h2>New book</h2>
<% if @book.errors.any? %>
<div class="alert alert-warning">
	<p>error</p>
	<ul>
		<% @book.errors.full_messages.each do |message| %>
			<li><%= message %></li>
		<% end %>
	</ul>
</div>
<% end %>
<%= form_for(@book) do |book| %>
<p><b>Title</b></p>
<%= book.text_field :title %>
<p><b>Opinion</b></p>
<%= book.text_area :body %>
<button type="submit" class="btn btn-primary">Create Book </button>
<% end %>
</div>

<div class="col-xs-9">
<h2>Books</h2>
<table class="table table-hover">
	<thead>
		<tr>
			<th>Title</th><th>Opinion</th>
		</tr>
	</thead>
	<tbody>
		<% @books.each do |book| %>
		<tr>
			<td><%= book.title %></td>
			<td><%= book.body %></td>
		</tr>
		<% end %>
	</tbody>

</table>
</div>
</div>
</div>

